year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

citHeader("To cite the ncaascrapR R package in publications, use:")

citEntry(entry = "Misc",
         author = personList(
         as.person("Akshay Easwaran"),
         as.person("Eric Hess"),
         as.person("John B. Edwards")
         ),
         title = "ncaascrapR: The SportsDataverse's R Package for College Sports Data.",
         url = c("https://ehess.github.io/ncaascrapR/"),
         year = year,
         note = note,
         textVersion = paste(
    "Akshay Easwaran and Eric Hess and John B. Edwards. ncaascrapR: The SportsDataverse's R Package for College Sports Data.",
    "Retrieved from https://ehess.github.io/ncaascrapR/"
  )
)
